<p id="notice"><%= notice %></p>

<h1>Listing Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Data</th>
      <th>Atualizado em</th>
      <th>Valor</th>
      <th>Quantidade</th>
      <th>Cpf</th>
      <th>Cnpj</th>
      <th>Cep</th>
      <th>Complemento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.status %></td>
        <td><%= pedido.data %></td>
        <td><%#= pedido.atualizado_em %></td>
        <td><%= pedido.valor %></td>
        <td><%#= pedido.quantidade %></td>
        <td><%#= pedido.cpf %></td>
        <td><%#= pedido.cnpj %></td>
        <td><%#= pedido.cep %></td>
        <td><%#= pedido.complemento %></td>
        <td><%= link_to 'Show', pedido %></td>
        <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pedido', new_pedido_path %>

